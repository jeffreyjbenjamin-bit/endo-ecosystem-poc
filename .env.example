# === Storage backend: choose ONE (PoC uses local to start) ===
STORAGE_BACKEND=none    # s3 | azureblob | none

# AWS (only if/when you switch to S3)
AWS_REGION=us-east-1
S3_BUCKET=endo-poc-raw

# Azure (only if/when you switch to Blob)
AZURE_BLOB_ACCOUNT=
AZURE_BLOB_KEY=
AZURE_BLOB_CONTAINER=endo-poc-raw

# SQLite PoC DB path
SQLITE_PATH=./data/documents.db

# API endpoints
CTGOV_BASE=https://clinicaltrials.gov/api/v2/studies
PUBMED_EUTILS_BASE=https://eutils.ncbi.nlm.nih.gov/entrez/eutils

# === Web Search (pick ONE; Bing recommended first) ===
BING_SEARCH_KEY=
BING_SEARCH_ENDPOINT=https://api.bing.microsoft.com/v7.0/search

# Optional allowlist (comma-separated hostnames). Leave empty to allow all.
SEARCH_ALLOW_HOSTS=pubmed.ncbi.nlm.nih.gov, clinicaltrials.gov, reporter.nih.gov, ema.europa.eu, fda.gov, www.biorxiv.org, www.medrxiv.org, api.openalex.org, www.nature.com, www.sciencedirect.com
